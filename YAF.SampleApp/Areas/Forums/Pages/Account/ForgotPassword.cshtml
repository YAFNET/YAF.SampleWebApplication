@page "{handler?}"
@using YAF.Web.HtmlHelpers
@model YAF.Pages.Account.ForgotPasswordModel

<div class="row">
    <div class="col-auto mx-auto">
        <form method="post" class="needs-validation" novalidate>
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">
                        @Html.LocalizedText("LOGIN", "PAGE1_INSTRUCTIONS")
                    </h5>
                    <div class="mb-3">
                        <label asp-for="Input.UserName" localized-page="LOGIN" localized-tag="USERNAME" class="form-label">
                        </label>
                        <input asp-for="Input.UserName" class="form-control" required />
                        <div class="invalid-feedback">
                            @Html.LocalizedText("LOGIN", "NEED_USERNAME")
                        </div>
                    </div>
                    <div class="mb-3 d-grid gap-2">
                        <button type="submit" button-style="Primary"
                                text-localized-page="COMMON" text-localized-tag="SUBMIT"
                                icon="check">
                        </button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptPartial")
}
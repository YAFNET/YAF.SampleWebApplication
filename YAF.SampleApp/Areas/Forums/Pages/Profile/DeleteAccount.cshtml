@page "{handler?}"
@using YAF.Core.Extensions
@using YAF.Web.HtmlHelpers
@using YAF.Types.Constants
@using YAF.Types.Extensions
@using YAF.Types.Interfaces

@model YAF.Pages.Profile.DeleteAccountModel

<div class="row">
    <div class="col-sm-auto">
        <profileMenu></profileMenu>
    </div>
    <div class="col">
        <div class="row">
            <div class="col">
                <div class="card mb-3">
                    <div class="card-header">
                        @Html.Icon("user-alt-slash")
                            @Html.LocalizedTextFormatted("TITLE", Model.PageBoardContext.PageUser.DisplayOrUserName())
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <h6 class="card-title">
                                @Html.LocalizedText("OPTIONS_TITLE")
                            </h6>
                            <div class="mb-3">
                                @foreach (var option in Model.Options)
                                {
                                    <div class="form-check">
                                        <input class="form-check-input" 
                                               type="radio" 
                                               asp-for="Option" 
                                               value="@option" />
                                        <label class="form-check-label" asp-for="Option">
                                            <strong>@Html.Raw(Model.Get<ILocalization>().GetText($"option_{option}_title"))</strong>
                                            <br />
                                            @Html.Raw(Model.Get<ILocalization>().GetText($"option_{option}_text"))
                                        </label>
                                    </div>
                                }
                            </div>
                            <div class="text-lg-center">
                                <button type="submit" 
                                        class="me-2"
                                        button-style="Danger"
                                        text-localized-page="DEFAULT"
                                        text-localized-tag="CONTINUE"
                                        icon="user-alt-slash"
                                        return-confirm-tag="CONFIRM"></button>
                                <a role="button"
                                   asp-page="@ForumPages.MyAccount.GetPageName()"
                                   button-style="Secondary"
                                   icon="reply"
                                   text-localized-page="COMMON"
                                   text-localized-tag="CANCEL"></a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>